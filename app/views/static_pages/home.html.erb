<div class="top_bar">
  <div id="title"><%=link_to "flickfindr", root_path, {:id=>"logo"} %></div>

<%if logged_in? %>
	 <div class="welcome">Welcome, <%= current_user.name %></div> 
<%end%>

<%= form_tag users_path, :method => 'get' do %>

	<p id="searchbar">
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :name => nil %>
	</p>
<% end %>
</div>


<%if logged_in? %>
	 <%=link_to "Profile", user_path(current_user), {:class=>"link"} %>
<%else%>
	 
	<%= link_to'<button type="button">Login</button>'.html_safe, login_path,{:class=>"link"}%>
<%end%>

