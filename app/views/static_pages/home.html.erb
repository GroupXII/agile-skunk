<div class="middle" style="height:120em;">
	<div style="padding:10px 10px 10px 10px;"> 
		<div class="leftColumn">
			<h2>Hottest</h2>
			<div class="hottest">
				<div class="spacing" style="left: 1em">
					<% for i in 1..6 %>
					<% @movie = Movie.find(i) %>
					<div class="poster">
						<%= link_to movie_path(@movie) do%>
							<img src="<%=@movie.posterPath%>" alt="Movie Poster"/>
							<span class="text"><%=@movie.title%></span>
						<%end%>
					</div>
					<%end%>
				</div>
			</div>

			<% 15.times do %>
				<br>
			<% end %>
			
			<h2>Upcoming</h2>
			<div class="postersleft">
				<div class="spacing" style="top: 0.1em; left: 0.1em">
				    <% for i in 6..11 %> <!-- only six movies will currently be displayed, the rest will be cutt off until some scrolling function is working for upcoming-->
					<% @movie = Movie.find(i) %>				
					<div class="poster" style="margin-top: 5px">
						<%= link_to movie_path(@movie) do %>
							<img src="<%= @movie.posterPath %>" alt="Movie Poster"/>
							<span class="text"><%= @movie.title %></span>
						<% end %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
		
		<div class= "rightColumn">
			<h2>User Ratings</h2>
			<div class="right">
				<table>
					<!--query-->
					<!--@msg.each do |msg|-->
					
					<tr>"This is a fake rating until database gets created." <a> Im a fake link</a></tr>
					<!--end-->
				</table>
			</div>
		</div>
		
		<div class="leftColumn">
			<h2 style="margin-top: 19em;">Top Rated</h2>
			<div class="postersleft">
				<div class="spacing" style="top: 0.1em; right: 0.1em">
					
					<% @movie =  Movie.find_by_sql("SELECT * from movies WHERE movies.numVotes > 500").last(6) %>
						<% @movie.each do |movie| %>
						<div class="poster" style="margin-top: 5px;">
							<%= link_to movie_path(movie) do %>
								<img src="<%= movie.posterPath %>" alt="Movie Poster"/>
								<span class="text"><%= movie.title %></span>
							<% end %>
						</div>
						<%end%>
				</div>
			</div>
		</div>
		
	


