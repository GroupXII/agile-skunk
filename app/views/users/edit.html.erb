<div class="top_bar">
  <div id="title"><%=link_to "flickfindr", root_path, {:id=>"logo"} %></div>
  <%if logged_in? %>
  <div class="welcome">Welcome, <%= current_user.name %></div>
  <div ><%= link_to 'Log out', logout_path, {method: :delete, :class=>"logout"}%></div>
  <% end %>
</div>

<div class ="middle">
  <div style="padding: 1em 1em 1em 1em;">
    <h1>Editing User</h1>
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
  
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
   
    
      <div class="field">
        <%= f.label :password %><br>
        <%= f.text_field :password %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br>
        <%= f.text_field :password_confirmation %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  
   
    <div class="btn"><%= link_to 'Back', user_path(current_user), :id => "nav-btn" %></div>
  </div>
</div>