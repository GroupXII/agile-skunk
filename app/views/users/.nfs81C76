<% provide(:title, 'Sign up') %>

<div class="top_bar">
  <div id="title"><%=link_to "flickfindr", root_path, {:id=>"logo"} %></div>
</div>

<div>
  <h1 class="header">Register</h1>
  <div class="form">
    <%= form_for(@user) do |f| %>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>
          <%= pluralize(@user.errors.count, "error") %> prohibited this user from being created:
          </h2>
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.label :Username %>
      <%= f.text_field :name, class: 'text_area' %>

      <%= f.label :email%>
      <%= f.email_field :email, class: 'text_area' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'text_area' %>


      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'text_area'%>

      <%= f.submit "Create my account", class: "btn btn-primary" %>


    <% end %>
  </div>
</div>

<br>
<%= link_to "Home", root_path, {:class=>"link"} %>

