<div style="height: 90em;">
  <%= form_for([@movie, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <div id="star-rating" style="margin-left: 1em;"><strong>Rating: &nbsp &nbsp</strong></div>
    </div>
    <div class="field">
      <br><%= f.label :comment, style: "margin-left: 1em;" %><br>
      <%= f.text_area :comment, style: "width:40em; height: 15em; margin-left: 1em;" %>
    </div>
    <div class="actions">
      <br><div style="margin-left: 1em;"><%= f.submit %></div>
    </div>
  <% end %>
  <%= link_to 'Back', movie_path(@movie), {:class => "btn btn-primary", :style => "margin-left: 1em; margin-top: 1em;"}%>
</div>



<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>