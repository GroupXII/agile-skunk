
<div class="middle1">

  <p id="notice"><%= notice %></p>
  <% 5.times do %>
    <br>
  <% end %>
  <div class="container2">
    <div class="movSpacing">
      <div class = "movImage">
        <p>
          <img src = "<%= @movie.posterPath %>" style="width: 75%; height: 75%;">
        </p>
      </div>
    </div>
  
    <div class="movDescrip">
      <p>
        <strong>Title:</strong>
        <%= @movie.title %>
      </p>

      <p>
        <strong>Synopsis:</strong>
        <%= @movie.synopsis %>
      </p>


      <p>
        <strong>Status:</strong>
        <%= @movie.status %>
      </p>
      
      <p>
       <strong>Average Score:</strong>
        <%= @movie.averageScore %>
      </p>

      <p>
        <strong>Votes:</strong>
        <%= @movie.numVotes %>
      </p>

      <p>
        <strong>Release Date:</strong>
        <%= @movie.releaseDate %>
      </p>

      <%= link_to 'Movie Index', movies_path %>
    </div> <!-- ./movDescrip -->
  </div> <!-- ./container1 -->
</div> <!-- ./middle1 -->